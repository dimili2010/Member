@model List<MemberViewModel>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Member List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller = "Member" asp-action="Insert" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Insert New Member
            </a>
        </div>
    </div>
    <table class="table table-bordered table table-striped">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Gender</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(m => m.FullName))
            {
                <tr>
                    <td>@obj.FullName</td>
                    <td>@obj.Email</td>
                    <td>@obj.Gender</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Member" asp-action="Update" asp-route-id="@obj.MemberId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Update
                            </a>
                            <a asp-controller="Member" asp-action="Delete" asp-route-id="@obj.MemberId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
